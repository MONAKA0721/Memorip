<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @plan.title %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @plan.destinations.any? %>
      <h3>Destinations (<%= @plan.destinations.count %>)</h3>
      <ol class="destinations">
        <%= render @destinations %>
      </ol>
    <% end %>
  </div>
</div>
