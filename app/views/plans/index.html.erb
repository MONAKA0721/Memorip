<%= javascript_include_tag 'gmap.js' %>
<h2>地図しおり</h2>

<div id='mapContainer'>
  <div id='planList'>
    <div id='planTitle'>
      <h3>タイトル</h3>
      <%= @plan.title %>
    </div>
    <div id='planProcess'>
    <h4>行程</h4>
    <ol class='planLocation' style="width:300px">
      <%= form_for(@plan, url:{controller:'plans', action:'update'}) do |f| %>
