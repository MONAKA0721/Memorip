          <%= f.text_field :destination1, {id: "dest1", class: "col-6"} %>
        </li>
        <li>
          <%= f.time_field :destination2time, {id: "dest_time2", class: 'col-5'} %>
          <%= f.text_field :destination2, {id: "dest2", class: "col-6"} %>
        </li>
        <li>
          <%= f.time_field :destination3time, {id: "dest_time3", class: 'col-5'} %>
          <%= f.text_field :destination3, {id: "dest3", class: "col-6"} %>
        </li>
        <li>
          <%= f.time_field :destination4time, {id: "dest_time4", class: 'col-5'} %>
          <%= f.text_field :destination4, {id: "dest4", class: "col-6"} %>
        </li>
        <li>
          <%= f.time_field :destination5time, {id: "dest_time5", class: 'col-5'} %>
          <%= f.text_field :destination5, {id: "dest5", class: "col-6"} %>
        </li>
        <li>
          <%= f.time_field :destination6time, {id: "dest_time6", class: 'col-5'} %>
          <%= f.text_field :destination6, {id: "dest6", class: "col-6"} %>
        </li>
        <li>
          <%= f.time_field :destination7time, {id: "dest_time7", class: 'col-5'} %>
          <%= f.text_field :destination7, {id: "dest7", class: "col-6"} %>
        </li>
        <li>
          <%= f.time_field :destination8time, {id: "dest_time8", class: 'col-5'} %>
          <%= f.text_field :destination8, {id: "dest8", class: "col-6"} %>
        </li>
        <li>
          <%= f.time_field :destination9time, {id: "dest_time9", class: 'col-5'} %>
