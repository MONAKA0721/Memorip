<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
    <section class="stats">
        <%= render 'shared/stats' %>
    </section>
    <section class="micropost_form">
      <%= render 'shared/micropost_form' %>
    </section>
  </aside>
  <div class="col-md-8">
      <div class="prefecture" style="width:100px">
        <%= collection_select :prefecture_code, @micropost,JpPrefecture::Prefecture.all, :code, :name %>
      </div>
      <%= link_to "検索", search_path, class:"btn btn-primary rounded-pill", role:"button" %>
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
</div>
