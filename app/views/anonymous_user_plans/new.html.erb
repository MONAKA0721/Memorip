<%= javascript_include_tag 'gmap.js' %>
<% provide(:title, 'プラン作成') %>
<% provide(:button_text, 'プランを作成する') %>
<% provide(:url, anonymous_user_planup_path) %>

<h1>プラン作成</h1>

<div id='mapContainer'>
    <div id='planList'>
      <%= form_for(@anonymous_user_plan, url: yield(:url) ) do |f| %>

        <%= f.label :タイトル %>
        <%= f.text_field :title, class: 'form-control' ,value:'新しい旅行' %>

        <label>行程</label>
        <ol  style="text-align: center;">
          <%= f.fields_for :destinations do |destinations_form| %>
            <li style="display:inline-flex">
              <div class="col-3">
                <%= destinations_form.time_field :time, class: 'form-control' %>
              </div>

              <div class="col-4">
                <%= destinations_form.text_field :name, class: 'form-control' %>
              </div>

              <div class="col-5">
                <%= destinations_form.file_field :picture, class: 'form-control', accept: 'image/jpeg,image/gif,image/png' %>
              </div>
            </li>
          <% end %>
        </ol>
        <div class="center-button">
          <button type="button" onclick="updateMap('anonymous_user_plan')">地図に反映</button>
        </div>
    </div>
    <div id='item'>
      <div id="map" style="height: 550px;">
      </div>
      <span class="picture">
        <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
      </span>
     <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>
    </div>
</div>
  <script type="text/javascript">
    $('#micropost_picture').bind('change', function() {
      var size_in_megabytes = this.files[0].size/1024/1024;
      if (size_in_megabytes > 5) {
        alert('Maximum file size is 5MB. Please choose a smaller file.');
      }
    });
  </script>
