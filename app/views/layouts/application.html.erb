<!DOCTYPE html>
<html>
  <head>
    <title>Memorip</title>
    <%= csrf_meta_tags %>
    <%= include_gon(:init => true) %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload', :debug => true %>
    <% self_css_path = "/assets/"+controller.controller_name  %>
    <%= stylesheet_link_tag self_css_path, :media => "all" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' , :debug => true %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'%>
    <meta name="google-site-verification" content="po8157oyj1IXaaMxeAi_p5sJOJ9TJtPqYZAIHN800pQ" />
    <meta name="viewport" content="width=device-width">
    <script src=<%=ENV['GOOGLE_MAP_URL']%> async defer></script>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <div class="container" style="margin-top:20px; margin-bottom:20px">
      <% flash.each do |message_type, message| %>
      <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
      <%= yield %>
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
